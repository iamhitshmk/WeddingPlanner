<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weddingplanner">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.payment.PlaceOrderSuccess"></activity>
        <activity android:name=".ui.payment.PaymentActivity" />
        <activity android:name=".ui.payment.CardActivity" />
        <activity android:name=".ViewOrdersActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".VendorItemDetailsActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".PhotoDetailActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity
            android:name=".ui.intro.IntroActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".ui.vendor.VendorListDetailsActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>